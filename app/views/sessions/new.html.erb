<% if flash[:alert] %>
  <div class="bg-red-500 text-white p-4 rounded-md mb-4">
    <%= flash[:alert] %>
  </div>
<% end %>

<% if flash[:notice] %>
  <div class="bg-green-500 text-white p-4 rounded-md mb-4">
    <%= flash[:notice] %>
  </div>
<% end %>

<%= form_with url: session_path, html: { class: 'space-y-6' } do |form| %>
  <div class="space-y-4">
    <div>
      <%= form.label :email_address, 'Email:', class: 'block text-sm font-medium text-text-1' %>

      <%= form.email_field(
        :email_address,
        required: true,
        autofocus: true,
        autocomplete: "username",
        value: params[:email_address],
        class: 'mt-1 p-2 border border-text-4 rounded-md w-full focus:ring-2 focus:ring-accent bg-baseBg-8 text-text-2'
      ) %>
    </div>

    <div>
      <%= form.label :password, 'Password:', class: 'block text-sm font-medium text-text-1' %>

      <%= form.password_field(
        :password,
        required: true,
        autocomplete: "current-password",
        maxlength: 72,
        class: 'mt-1 p-2 border border-text-4 rounded-md w-full focus:ring-2 focus:ring-accent bg-baseBg-8 text-text-2'
      ) %>
    </div>
  </div>

  <div class='mt-3'>
    <%= form.submit 'Sign in', class: 'w-full py-2 px-4 bg-blue-500 text-white font-semibold rounded-md hover:bg-blue-600 hover:cursor-pointer focus:ring-2 focus:ring-blue-500' %>
  </div>
<% end %>


<div class="mt-4 text-center">
  <%= link_to 'Forgot password?', new_password_path, class: 'text-sm text-blue-500 hover:text-blue-700' %>
</div>

<div class="mt-4 text-center">
  <%= link_to 'Sign Up', new_registration_path, class: 'text-sm text-blue-500 hover:text-blue-700' %>
</div>
