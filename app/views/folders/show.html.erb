<div class="mx-auto md:w-2/3 w-full flex flex-col">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>
    <h2 class='text-3xl pb-4'> <%= @folder.name %> </h2>
    <div class="inline-block ml-2">
      <%= button_to "Mark all as read", mark_all_as_read_folder_path,
        remote: true,
        method: :patch,
        class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-3 mb-5 rounded"
      %>
    </div>
    <%= link_to "\u{270E}", edit_folder_path(@folder), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-3 rounded" %>
    <div class="inline-block ml-2">
      <%= button_to "\u{21BB} Refresh", refresh_feed_folder_path,
        remote: true,
        method: :get,
        class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-3 mb-5 rounded"
      %>
    </div>
    <div class="inline-block ml-2">
      <%= button_to "\u{1F5D1}", @folder,
        method: :delete,
        data: { turbo_confirm: 'Sure to delete this folder?' },
        class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-3 rounded'
      %>
    </div>
  </div>

  <% if @articles.present? %>
    <h2 class='text-3xl'>Your Feed</h2>
    <%= render 'articles/articles', show_author: true, articles: @articles if @articles.present? %>
  <% end %>
</div>
